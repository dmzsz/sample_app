<%= form_for(@micropost) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<div class="field">
		<%= f.text_area :content, placeholder: "Compose new micropost..." ,onkeyup: "checkContentKeyUp(this,'contentMsg',140)"%>
	</div>
	<%= f.submit "Post", class: "btn btn-large btn-primary" %>
	<span id="contentMsg">  
       		<font color="#f18732">内容限140字内</font>  
       	</span> 
<% end %>